@using Kendo.Mvc.UI
@model IdentityManagement.Entities.HealthBenefit


<style>
    .k-popup-edit-form{
        padding:0px!important;
    }
    .k-edit-form-container {
        background-color: #ADD8E6;
        width: 550px !important;
        /*//height:400px!important;*/
    }

    .k-edit-buttons {
        width: 530px!important;
        height: 30px!important;
        margin-top:-15px;
    }
</style>
@Html.ValidationSummary()
<div id="divBenefitWin" style="background-color:#ADD8E6;height:340px!important;margin-top:-15px;" data-role="page">
    <table style="width:100%">
        <tr>
            <td>
                <fieldset class="fieldset" style="padding:10px; box-shadow:none;">
                   <div id="divArchivedOnDate">@(Html.Kendo().DatePickerFor(m => m.ArchivedOnDate).Format("{0:MM/dd/yyyy}")
                        .Name("ArchivedOnDate"))</div>
                    <table id="smalltable" class="table table-condensed" style="background-color:transparent">
                        <tr>
                            <td width="35%"></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;<scan style="color:red;font-weight:bold;">*</scan>@Html.Label("Coverage Name:", new { style = "text-align:right" })</td>
                            <td>
                                <script>
                                    $("#divArchivedOnDate").hide();
                                                                 

                                    function BenefitTypeChanged(e) {
                                        if ($("#BenefitTypeID").val() == 2) {
                                            $("#divPI").hide();
                                            $("#divlblPI").hide();
                                            $("#divBICNum").hide();
                                            $("#divlblBICNum").hide();
                                            $("#divIssuredDate").hide();
                                            $("#divlblIssuredDate").hide();
                                        }
                                        else if ($("#BenefitTypeID").val() == 1) {
                                            $("#divPI").show();
                                            $("#divlblPI").show();
                                            $("#divBICNum").hide();
                                            $("#divlblBICNum").hide();
                                            $("#divIssuredDate").hide();
                                            $("#divlblIssuredDate").hide();
                                        }
                                        else if ($("#BenefitTypeID").val() == 3) {
                                            $("#divBICNum").show();
                                            $("#divlblBICNum").show();
                                            $("#divIssuredDate").show();
                                            $("#divlblIssuredDate").show();
                                            $("#divPI").hide();
                                            $("#divlblPI").hide();
                                        }
                                    }

                                    $("input[type='radio']").change(function () {
                                        var selection = $(this).val();
                                        if (selection == 'true') {
                                            $("#lblAgreeType").text("Applied On:");
                                        }
                                        else
                                            $("#lblAgreeType").text("Refused On:");
                                    });
                                    
                                </script>
                                @(Html.Kendo().DropDownListFor(m => m.BenefitTypeID).HtmlAttributes(new { style = "width:150px" })
                .Name("BenefitTypeID")
            .OptionLabel("Select Benefit Type ...")
            .DataTextField("Name")
            .DataValueField("BenefitTypeID")
            .Value(Model.BenefitTypeID.ToString())
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetBenefitTypeList", "Client");
                });
            }).Events(e => { e.Change("BenefitTypeChanged"); e.DataBound("BenefitTypeChanged"); }))
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;<scan style="color:red;font-weight:bold">*</scan>@Html.Label("Agree Type:")</td>
                            <td>
                                @*<div class="editor-field">*@
                                @Html.RadioButtonFor(m => m.AppliedOrRefused, "true", new { @id = "Applied", @class = "AppliedOrRefused", @style = "margin-left:5px;" })&nbsp;@Html.Label("Applied") &emsp;
                                @Html.RadioButtonFor(m => m.AppliedOrRefused, "false", new { @id = "Refused", @class = "AppliedOrRefused", @style = "margin-left:5px;" })&nbsp;@Html.Label("Refused")
                                @*</div>*@
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;<scan style="color:red; font-weight:bold">*</scan>@Html.Label("Applied On:", new { id = "lblAgreeType" })</td>
                            <td>
                                @*<input id="AppliedOrRefusedOnDate" style="width:120px" />*@
                               @(Html.Kendo().DatePickerFor(m => m.AppliedOrRefusedOnDate).Format("MM/dd/yyyy")
                        .HtmlAttributes(new
                        {
                            @id= "AppliedOrRefusedOnDate",
                            @style = "width:140px;",
                            @required = true,
                            @class= "hcbdatepicker"
                            //@validationMessage = "Applied Or RefusedOn date is required and must be a valid date."
                        }))
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Label("Outcome:")</td>
                            <td>
                                @(Html.Kendo().DropDownListFor(m => m.OutcomeID)
                        .Name("OutcomeID")
                        .OptionLabel("(Pending)")
                        .DataTextField("Name")
                        .DataValueField("OutcomeID")
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                read.Action("GetOutcomeList", "Client");
                            });
                        }).HtmlAttributes(new { style = "width:180px" }))

                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Label("Outcome Date:")</td>
                            <td>
                                @*<input id="OutcomeDate" style="width:120px"/>*@
                                
                                @(Html.Kendo().DatePickerFor(m => m.OutcomeDate).Format("MM/dd/yyyy")
                        .HtmlAttributes(new
                        {
                            @id= "OutcomeDate",
                            @style = "width:140px",
                            @class = "hcbdatepicker",
                            //@validationMessage = "Outcome Date must be a valid date."
                        }))
                        </td>
                    </tr>
                    <tr>
                        <td><div id="divlblBICNum">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Label("BIC #")</div></td>
                        <td><div id="divBICNum">@(Html.Kendo().TextBoxFor(m => m.BICNum).HtmlAttributes(new { @placeholder = "BIC Number", maxlength = "20", @style = "margin-left:1px; width:150px", @id = "txtBicNum" })) </div></td>
                    </tr>
                    <tr>
                        <td><div id="divlblIssuredDate">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Label("Issured Date")
</div></td>
<td><div id="divIssuredDate" style="width:120px">
        @*<input id="IssuedOnDate" style="width:120px"/>*@
        @(Html.Kendo().DatePickerFor(m => m.IssuedOnDate).Format("MM/dd/yyyy")
                    .HtmlAttributes(new
                    {
                        @id = "IssuedOnDate",
                        @style = "width:140px",
                        @class = "hcbdatepicker"
                    }))
        </div>
</td>
            </tr>

<tr>

    <td><div id="divlblPI">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Label("Phone Interview Date:")</div></td>
    <td>
        <div id="divPI">
            @*<input id="PhoneInterviewDate" style="width:120px" />*@
            @(Html.Kendo().DatePickerFor(m => m.PhoneInterviewDate).Format("MM/dd/yyyy")
                       .HtmlAttributes(new
                        {
                            @id= "PhoneInterviewDate",
                            @validationMessage = "Phone Interview Date must be a valid date.",
                            @class = "hcbdatepicker",
                            @style = "width:140px",
                        }))
        </div>
    </td>

</tr>

<tr><td colspan="2" class="space"></td></tr>
<tr>
    <td colspan="2">
        <div id="addresscontainer">
            @(Html.TextAreaFor(m => m.NoteorComment, new { @class = "textareaforcasemanngement", @placeholder = "notes/comments ...", spellcheck = true, id = "txtNoteorComment", @maxlength = "255" }))
        </div>
    </td>
</tr>
<tr><td colspan="2" class="space"></td></tr>
            </table>
          </fieldset>
       </td>
    </tr>
</table>
</div>
