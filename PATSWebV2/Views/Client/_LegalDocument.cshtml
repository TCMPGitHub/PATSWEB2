@model PATSWebV2.ViewModels.LegalDocument.LegalDocumentViewModel
<style>
    .k-tabstrip-items {
        padding: 0px;
    }

        .k-tabstrip-items .k-item {
            height: 25px;
            font-size: 13px;
            font-weight: bolder;
            /*padding:0px;*/
            background-color: #D9EDD1;
        }
    .k-tabstrip .k-content.k-state-active {
        padding: 0px;
        background-color: #D9EDD1 !important;
    }

    #lDocTabstrip {
        margin: 0;
        padding: 0;
        border-width: 0;
        height: 100vh; /* DO NOT USE !important for setting the Grid height!*/
    }

    .ui-dialog-titlebar {
        background-color: #D9EDD1;
    }
</style>
<script>
    function lDocTabChanged(e) {
           WaitDialog(1);
           if (e.item.textContent == "Back to dashboard") {
                url = '@Url.Action("GetEditingPaneBack", "Client")';
                fndata = { EpisodeID: $("#AllSelectedOffenderEpisodeResult").val() };
                LoadSelectedTab(url, fndata, "#editingpane");
            }
            else
                reloadTab(e);

            WaitDialog(0);
        }
        function reloadTab(e) {
            $('#lDocTabstrip').data('kendoTabStrip').reload(e.item);
        }
</script>
@Html.HiddenFor(m=>m.ActiveTabIn, new { id= "hdLDocActiveTab" })
<div id="ldoctabs" class="k-content">
    @(Html.Kendo().TabStrip()
         .Name("lDocTabstrip")
         .Events(e =>
         {
             e.Select("lDocTabChanged");
         })
         .HtmlAttributes(new { style = "padding:0; height:auto;width:98vw;background-color:#D9EDD1;" })
         .Animation(animation =>
             animation.Open(effect =>
                 effect.Fade(FadeDirection.In)))
      .Items(tabstrip =>
      {
          tabstrip.Add().Text("LEGAL DOCUMENT")
           .LoadContentFrom("GetLegalDocumentCheckList", "Client", new
           {
               EpisodeId = Model.EpisodeId,
               DocId = 0
           });
          tabstrip.Add().Text("Back to dashboard").HtmlAttributes(new { style = "float:right;" });
      }
    ))
</div>
<script type="text/javascript">
         $(document).ready(function () {
            var tabidex = 0;
            switch ($("#hdLDocActiveTab").val())
            {
                case "legaldocChecklist": { tabidex = 1; break; }
            }
            $("#lDocTabstrip").kendoTabStrip().data("kendoTabStrip").activateTab($("#lDocTabstrip-" + tabidex.toString()));
            $('#lDocTabstrip').getKendoTabStrip().select(tabidex -1);
      });
</script>
