@model PATSWebV2.ViewModels.Evaluation.EvaluationViewModel
<style>
    .k-tabstrip-items {
        padding: 0px;
    }

    .k-tabstrip-items .k-item {
        height: 25px;
        font-size: 13px;
        font-weight: bolder;
        background-color: #DCDCDC;
    }

    .k-tabstrip .k-content.k-state-active {
        padding: 0px;
        background-color: #DCDCDC !important;
    }

    #evlTabstrip {
        margin: 0;
        padding: 0;
        border-width: 0;
        height: 100vh; /* DO NOT USE !important for setting the Grid height!*/
    }

    .k-grid tr td {
        line-height: 18px !important;
        min-height: 18px !important;
        height: 18px !important;
        font-size: 14px;
        border-bottom: 0.5px solid silver !important;
    }

    .ui-dialog-titlebar {
        background-color: #DCDCDC;
    }
</style>
@Html.HiddenFor(m => m.EpisodeId, new { @id = "hdEpisodeId" })
@Html.HiddenFor(m => m.ActiveTabIn, new { @id = "hdEvlActiveTab" })
<script>
    function evlTabChanged(e) {
           WaitDialog(1);
           if (e.item.textContent == "Back to dashboard") {
                url = '@Url.Action("GetEditingPaneBack", "Client")';
                fndata = { EpisodeID: $("#AllSelectedOffenderEpisodeResult").val() };
                LoadSelectedTab(url, fndata, "#editingpane");
            }
            else
                reloadTab(e);

            WaitDialog(0);
        }
        function reloadTab(e) {
            $('#evlTabstrip').data('kendoTabStrip').reload(e.item);
        }
</script>

<div id="dsmtabs" class="k-content">
    @(Html.Kendo().TabStrip()
         .Name("evlTabstrip")
         .Events(e =>
         {
             e.Select("evlTabChanged");
         })
         .HtmlAttributes(new { style = "padding:0;height:auto; width:98vw;background-color:#DCDCDC;" })
         .Animation(animation =>
             animation.Open(effect =>
                 effect.Fade(FadeDirection.In)))
      .Items(tabstrip =>
      {
          tabstrip.Add().Text("EVALUATION")
           .LoadContentFrom("GetEvaluationItems", "Client", new
           {
               EpisodeId = Model.EpisodeId,
               EvaluationID = 0
           });
          tabstrip.Add().Text("EVALUATION HISTORY")
                 .LoadContentFrom("GetEvaluationHis", "Client", new { EpisodeId = Model.EpisodeId });
          tabstrip.Add().Text("Back to dashboard").HtmlAttributes(new { style = "float:right;" });
      }
    ))
</div>
<script type="text/javascript">
         $(document).ready(function () {
            var tabidex = 0;
            switch ($("#hdEvlActiveTab").val())
            {
                case "evaluationmain": { tabidex = 1; break; }
                case "evaluationhis": { tabidex = 2; break; }
            }
            $("#evlTabstrip").kendoTabStrip().data("kendoTabStrip").activateTab($("#evlTabstrip-" + tabidex.toString()));
            $('#evlTabstrip').getKendoTabStrip().select(tabidex -1);
      });
</script>


